# IoT Monitoring System Environment Configuration

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=iot_monitoring
POSTGRES_USER=iot_user
POSTGRES_PASSWORD=iot_password
POSTGRES_MAX_CONNECTIONS=10

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=iot-monitoring-system
KAFKA_GROUP_ID=iot-consumers

# Kafka Topics
KAFKA_TOPIC_SENSORS=sensors-data
KAFKA_TOPIC_ALERTS=alerts
KAFKA_TOPIC_METRICS=metrics

# Service Ports
IOT_SIMULATOR_PORT=3001
DATA_INGESTION_PORT=3002
DATA_PROCESSING_PORT=3003
ALERT_SERVICE_PORT=3004
API_GATEWAY_PORT=3005
WEBSOCKET_SERVICE_PORT=3006

# React Dashboard
REACT_APP_API_URL=http://localhost:3005
REACT_APP_WEBSOCKET_URL=http://localhost:3006

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Development
NODE_ENV=development
DEBUG=iot:*

# Performance Settings
BATCH_SIZE=100
CACHE_TTL_REALTIME=3600
CACHE_TTL_STATS=86400
ALERT_ESCALATION_TIMEOUT=300000

# Health Check URLs
POSTGRES_HEALTH_CHECK_URL=postgresql://iot_user:iot_password@localhost:5432/iot_monitoring
REDIS_HEALTH_CHECK_URL=redis://localhost:6379
KAFKA_HEALTH_CHECK_URL=localhost:9092

# Optional Development Tools
KAFKA_UI_PORT=8080
REDIS_COMMANDER_PORT=8081
